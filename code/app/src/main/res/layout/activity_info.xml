<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/app_icon_size"
            android:layout_height="@dimen/app_icon_size"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ico_call_large" />


        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_splash"
            android:text="@string/txt_welcome"
            android:textAppearance="@style/FontHeavyBold"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_size_xlarge"
            android:visibility="gone"
            tools:ignore="MissingPrefix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_welcome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_splash"
            android:text="@string/app_name"
            android:textAppearance="@style/FontHeavyBold"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_size_xlarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_splash"
            android:text="v1.0"
            android:textAppearance="@style/FontLight"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_powered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/powered_by"
            android:textAppearance="@style/FontLight"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_middle" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_powered_by"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/text_size_very_small" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/text_size_xxlarge"
        android:layout_height="@dimen/text_size_xxlarge"
        android:layout_margin="@dimen/text_size_very_small"
        android:src="@drawable/ic_back" />
</RelativeLayout>